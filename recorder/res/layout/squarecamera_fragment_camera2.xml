<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000ff">
    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </FrameLayout>
    <com.widget.CameraView
        android:id="@+id/camera_preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/iv_change_camera"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:visibility="gone"
        android:layout_alignBottom="@+id/camera_preview_view"
        android:src="@drawable/durec_camera_switch_normal"/>
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:visibility="gone"
        android:layout_alignRight="@+id/camera_preview_view"
        android:src="@drawable/durec_camera_close_normal"/>
</RelativeLayout>
